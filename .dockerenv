# STORAGE
PANOPTES_STORAGE_DIR=./etc/storage

# Ngrok
PANOPTES_NGROK_CONFIG_FILE_PATH=./.local/ngrok/config/ngrok.yml

# TLS
PANOPTES_MINICA_CERTS_DIR=./etc/tls/certs
PANOPTES_ETC_TRAEFIK_DIR=./etc/traefik

# MAILBOX
PANOPTES_MAILBOX_PASSWORD=mailboxpass
PANOPTES_MAILBOX_USERNAME=mailer
PANOPTES_MAILBOX_PUBLIC_HOST=mailbox.panoptes.test
PANOPTES_MAILBOX_INTERNAL_HOST=smtp.mail.docker
PANOPTES_MAILBOX_HTTP_PORT=1080
PANOPTES_MAILBOX_SMTP_PORT=1025

# MKDOCS
PANOPTES_ETC_MKDOCS=./etc/mkdocs
PANOPTES_MKDOCS_HOST=mkdocs.panoptes.test
PANOPTES_MKDOCS_PORT=8000

# GRAFANA STACK
PANOPTES_ETC_GRAFANA_STACK=./etc/grafana-stack
PANOPTES_GRAFANA_STACK_ENABLED=true
PANOPTES_GRAFANA_HOST=grafana.panoptes.test
PANOPTES_GRAFANA_LOG_LEVEL=debug
PANOPTES_GRAFANA_HTTP_PORT=3000
PANOPTES_GRAFANA_ADMIN_USERNAME=grafana
PANOPTES_GRAFANA_ADMIN_PASSWORD=superpass
PANOPTES_GRAFANA_PROVISIONING_PATH=/etc/grafana/provisioning

PANOPTES_LOKI_HOST=loki.panoptes.test
PANOPTES_LOKI_INTERNAL_HOST=loki
PANOPTES_LOKI_HTTP_PORT=3100
PANOPTES_LOKI_CONFIG_PATH=/etc/loki/config.yaml

PANOPTES_PROMTAIL_CONFIG_PATH=/etc/promtail/config.yaml
PANOPTES_PROMTAIL_HTTP_PORT=9080

PANOPTES_PROMETHEUS_HOST=prometheus.panoptes.test
PANOPTES_PROMETHEUS_HTTP_PORT=9090
PANOPTES_PROMETHEUS_INTERNAL_HOST=prometheus
PANOPTES_PROMETHEUS_HTTP_PORT=9090

# PANOPTES
PANOPTES_AIR_DEBUG=false
PANOPTES_DIR=./api
PANOPTES_HOST=panoptes.test
PANOPTES_HTTP_PORT=8080

PANOPTES_POSTGRES_SCHEMA=public
PANOPTES_POSTGRES_APP_USER=panoptesapp
PANOPTES_POSTGRES_APP_PASSWORD=iampanoptes

PANOPTES_POSTGRES_MIGRATOR_USER=panoptesmigrator
PANOPTES_POSTGRES_MIGRATOR_PASSWORD=iammigrator

PANOPTES_MIGRATIONS_DIR=./db/migrations
PANOPTES_DB_SCRIPTS_DIR=./db/scripts

# Jet
PANOPTES_JET_BUILD_CTX=./.local/jet

# Postgres
PANOPTES_POSTGRES_DB=panoptes
PANOPTES_POSTGRES_ROOT_USER=root
PANOPTES_POSTGRES_ROOT_PASSWORD=iamroot
PANOPTES_POSTGRES_HOST_PORT=5432
PANOPTES_POSTGRES_INIT_DIR=./etc/postgres/init.d

# Pgadmin
PANOPTES_PGADMIN_HOST=pgadmin.panoptes.test
PANOPTES_PGADMIN_PORT=80
PANOPTES_PGADMIN_EMAIL=pgadmin@panoptes.test
PANOPTES_PGADMIN_PASSWORD=iampgadmin
PANOPTES_PGADMIN_SERVERS_FILEPATH=./.local/pgadmin/config/servers.json
